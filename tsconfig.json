{
  "compilerOptions": {
    "module": "CommonJS", // required
    "target": "es6", // required
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": false, // required
    "experimentalDecorators": true, // required,
    "moduleDetection": "force"
  },
  "paths": {
    "@/*": ["src/*"],
    "@utils/*": ["src/utils/*"],
    "@core/*": ["src/core/*"]
  }
}
