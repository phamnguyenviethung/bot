{
  "compilerOptions": {
    "module": "CommonJS", // required
    "target": "es6", // required
    "rootDir": "src",
    "outDir": "dist",
    "emitDecoratorMetadata": true, // required
    "experimentalDecorators": true, // required,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"]
    }
  }
}
